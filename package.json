{
  "name": "ilrta-monorepo",
  "version": "0.0.0",
  "description": "",
  "private": "true",
  "scripts": {
    "install:packages": "pnpm --filter './packages/**' install",
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "husky install",
    "build": "pnpm --filter 'ilrta' build && pnpm --filter './packages/*' --filter !'ilrta' build",
    "build:contracts": "pnpm --filter 'ilrta' build",
    "codegen": "pnpm --parallel codegen",
    "lint": "pnpm --parallel lint",
    "format": "pnpm --parallel format",
    "typecheck": "pnpm --parallel typecheck"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "rome": "^12.1.3",
    "typescript": "^5.1.6"
  }
}
